{
  "name": "zfaucet",
  "version": "0.3.0",
  "description": "Simple Zcash(ZEC) faucet built with Node.",
  "main": "server.js",
  "engines": {
    "node": ">=8.11.2"
  },
  "scripts": {
    "test": "npm run testsuite && npm run linter",
    "testsuite": "./node_modules/.bin/mocha test/* --recursive --exit",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec --exit",
    "linter": "xo",
    "start": "node server.js",
    "prepare": "browserify -t vueify -e src/index.js | babel-minify --mangle false > public/js/bundle.js",
    "dev": "watchify -t vueify -e src/index.js -o public/js/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/super3/zfaucet.git"
  },
  "author": "Shawn Wilkinson",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/super3/zfaucet/issues"
  },
  "homepage": "https://github.com/super3/zfaucet#readme",
  "dependencies": {
    "apicache": "^1.2.3",
    "axios": "^0.18.0",
    "base58check": "^2.0.0",
    "bignumber.js": "^8.1.1",
    "bitcoinjs-lib": "^4.0.2",
    "bn.js": "^4.11.8",
    "body-parser": "^1.18.3",
    "debug": "^4.1.1",
    "decamelize": "^2.0.0",
    "dog-names": "^1.0.2",
    "dotenv": "^6.2.0",
    "ejs": "^2.6.1",
    "express": "^4.17.1",
    "hoek": "^6.1.2",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-json": "^2.0.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "request-promise": "^4.2.2",
    "rethinkdb": "^2.3.3",
    "socket.io": "^2.2.0",
    "stdrpc": "^1.0.0",
    "vue": "^2.5.21"
  },
  "devDependencies": {
    "babel-minify": "^0.5.0",
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "ioredis": "^4.3.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "sinon": "^7.2.4",
    "socket.io-client": "^2.2.0",
    "supertest": "^3.3.0",
    "vueify": "^9.4.1",
    "watchify": "^3.11.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "globals": [
      "window",
      "describe",
      "it",
      "before"
    ],
    "rules": {
      "no-await-in-loop": "off",
      "curly": "off",
      "capitalized-comments": "off",
      "no-new": "off",
      "prefer-rest-params": "off"
    }
  }
}
